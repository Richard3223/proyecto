@model List<proyecto.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<h1>Usuarios</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Correo Electrónico</th>
            <th>Teléfono</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.Nombre</td>
                <td>@usuario.Email</td>
                <td>@usuario.Telefono</td>
                <td>
                    <a href="@Url.Action("Details", new { id = usuario.UsuarioID })">Ver</a> |
                    <a href="@Url.Action("Edit", new { id = usuario.UsuarioID })">Editar</a> |
                    <a href="@Url.Action("Delete", new { id = usuario.UsuarioID })">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")">Agregar Usuario</a>
